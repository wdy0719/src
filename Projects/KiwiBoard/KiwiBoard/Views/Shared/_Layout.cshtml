<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <title>@ViewBag.Title - ISCOPE Dashboard</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("style", required: false)
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/" style="padding-left:20px"><img height="40" src="/images/cosmoslogo.png" border="0"></a>
                <span class="navbar-text navbar-right">ISCOPE</span>
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-navbar-collapse-1">
                <ul class="nav navbar-nav" style="padding-left:60px">
                    <li class="dropdown active">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Diagnostic Tools <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="~/Tools/JobState"><small>&nbsp;&nbsp;Job State Viewer</small></a></li>
                            <li><a href="#"><small>&nbsp;&nbsp;CsLog Viewer</small></a></li>
                        </ul>
                    </li>
                </ul>
                <p class="nav navbar-text navbar-right" style="padding-right:60PX">Hello, @User.Identity.Name !</p>
            </div><!-- /.navbar-collapse -->
            <div class="navbar-collapse collapse">

            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="padding-left: 20px;padding-right:20px;padding-top:10px;padding-bottom:20px; border:thick;">
        @RenderBody()
    </div>

    <footer class="navbar navbar-default navbar-fixed-bottom" style="position:fixed;overflow:hidden;bottom:0;min-height:30px !important;">
        <small>&copy; @DateTime.Now.Year - contact: <a href="mailto:v-dayow@microsoft.com">v-dayow@microsoft.com</a></small>
    </footer>

    <div class="modal fade" id="ProcessingDialog" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-body">
                    Processing...
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstraptable")
    
    @RenderSection("scripts", required: false)

    <script>
        var ProcessingDialog;
        ProcessingDialog = ProcessingDialog || (function () {
            var processingDialog = $("#ProcessingDialog");
            return {
                show: function () {
                    processingDialog.modal('show');
                },
                hide: function () {
                    processingDialog.modal('hide');
                },
            };
        })();

        function ajaxindicatorstart() {
            $('body').css('cursor', 'wait');
            $("input").prop('disabled', true);
            $("button").prop('disabled', true);
        }

        function ajaxindicatorstop() {
            $("input").prop('disabled', false);
            $("button").prop('disabled', false);
            $('body').css('cursor', 'auto');
        }
    </script>

</body>
</html>
